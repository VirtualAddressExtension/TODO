<Window x:Class="TODO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="280" Width="350">
    <Grid>
        <Label Content="Username:" Margin="10,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="UsernameTextBox" Margin="10,40,10,0" VerticalAlignment="Top" Height="25"/>

        <Label Content="Password:" Margin="10,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="PasswordBox" Margin="10,100,10,0" VerticalAlignment="Top" Height="25"/>

        <Button Content="Login" Width="100" Height="25" Margin="-140,140,0,0" Click="LoginButton_Click"/>
        <Button Content="Register" Width="100" Height="25" Margin="140,140,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>